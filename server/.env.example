PORT=5001

# MongoDB Connection
# For LOCAL development: mongodb://localhost:27017/bloodbridge
# For PRODUCTION (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/bloodbridge
MONGO_URI=mongodb://localhost:27017/bloodbridge

JWT_SECRET=your_jwt_secret_key_here

# EmailJS Configuration - Two Templates (Free Tier)
# Get these from https://www.emailjs.com/
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_OTP=your_otp_template_id
EMAILJS_PUBLIC_KEY=your_public_key
EMAILJS_PRIVATE_KEY=your_private_key
EMAILJS_TEMPLATE_GENERAL=your_general_template_id

# Frontend URL (change this when deployed)
FRONTEND_URL=http://localhost:5173

# Environment
NODE_ENV=development
